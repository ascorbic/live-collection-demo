---
import { getLiveEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export const prerender = false;

const { handle } = Astro.params;

if (!handle) {
  return Astro.redirect('/collections');
}

const { entry: collection, error } = await getLiveEntry('collections', handle);

if (error) {
  console.error('Collection error:', error.message);
  return Astro.redirect('/404');
}

if (!collection) {
  return Astro.redirect('/404');
}
---

<Layout title={`${collection.data.title} - Collections - Shopify Live Collections Demo`}>
  <main>
    <div class="collection-header">
      {collection.data.image && (
        <div class="hero-image">
          <img 
            src={collection.data.image.url} 
            alt={collection.data.image.altText || collection.data.title}
          />
        </div>
      )}
      
      <div class="collection-info">
        <h1>{collection.data.title}</h1>
        <p class="description">{collection.data.description}</p>
        <p class="meta">Updated: {new Date(collection.data.updatedAt).toLocaleDateString()}</p>
      </div>
    </div>

    {collection.data.products && collection.data.products.edges.length > 0 ? (
      <section class="products-section">
        <h2>Products in this Collection</h2>
        <div class="products-grid">
          {collection.data.products.edges.map(({ node: product }) => (
            <a href={`/products/${product.handle}`} class="product-card">
              {product.featuredImage && (
                <img 
                  src={product.featuredImage.url} 
                  alt={product.featuredImage.altText || product.title}
                />
              )}
              <div class="product-info">
                <h3>{product.title}</h3>
                <p class="price">${product.priceRange.minVariantPrice.amount}</p>
                <p class="availability">
                  {product.availableForSale ? '✓ In Stock' : '✗ Out of Stock'}
                </p>
                {product.productType && (
                  <p class="product-type">{product.productType}</p>
                )}
              </div>
            </a>
          ))}
        </div>
      </section>
    ) : (
      <div class="no-products">
        <h2>No Products Available</h2>
        <p>This collection doesn't have any products yet.</p>
      </div>
    )}

    <div class="navigation">
      <a href="/collections">← Back to Collections</a>
      <a href="/">← Back to Home</a>
    </div>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 2rem;
    width: 1200px;
    max-width: calc(100% - 2rem);
    color: #e5e5e5;
  }

  .collection-header {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    margin: 2rem 0 4rem 0;
    align-items: center;
  }

  @media (max-width: 768px) {
    .collection-header {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }

  .hero-image {
    border-radius: 16px;
    overflow: hidden;
    border: 1px solid #333;
  }

  .hero-image img {
    width: 100%;
    height: 300px;
    object-fit: cover;
  }

  .collection-info {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
    background: linear-gradient(135deg, #4ade80 0%, #22c55e 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1.2;
  }

  .description {
    font-size: 1.1rem;
    line-height: 1.6;
    color: #d1d5db;
    margin: 0;
  }

  .meta {
    font-size: 0.9rem;
    color: #4ade80;
    font-weight: 500;
    margin: 0;
  }

  .products-section {
    margin: 4rem 0;
  }

  .products-section h2 {
    font-size: 2rem;
    font-weight: 600;
    margin: 0 0 2rem 0;
    color: #f5f5f5;
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .product-card {
    border: 1px solid #333;
    border-radius: 16px;
    text-decoration: none;
    color: #e5e5e5;
    transition: all 0.3s ease;
    background: rgba(255, 255, 255, 0.02);
    backdrop-filter: blur(10px);
    overflow: hidden;
  }

  .product-card:hover {
    transform: translateY(-8px);
    border-color: #4ade80;
    background: rgba(255, 255, 255, 0.05);
    box-shadow: 0 20px 40px rgba(74, 222, 128, 0.1);
  }

  .product-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .product-info {
    padding: 1.5rem;
  }

  .product-card h3 {
    margin: 0 0 0.75rem 0;
    font-size: 1.2rem;
    font-weight: 600;
    color: #f5f5f5;
  }

  .price {
    font-weight: 700;
    color: #4ade80;
    margin: 0.5rem 0;
    font-size: 1.1rem;
  }

  .availability {
    font-size: 0.9rem;
    margin: 0.5rem 0;
    font-weight: 500;
  }

  .product-type {
    font-size: 0.8rem;
    color: #9ca3af;
    margin: 0.5rem 0 0 0;
  }

  .no-products {
    text-align: center;
    margin: 4rem 0;
    padding: 3rem;
    background: rgba(255, 255, 255, 0.02);
    border-radius: 16px;
    border: 1px solid #333;
  }

  .no-products h2 {
    font-size: 1.5rem;
    margin: 0 0 1rem 0;
    color: #f5f5f5;
  }

  .no-products p {
    color: #9ca3af;
    margin: 0;
  }

  .navigation {
    display: flex;
    justify-content: space-between;
    margin: 4rem 0 2rem 0;
    padding-top: 2rem;
    border-top: 1px solid #333;
  }

  @media (max-width: 640px) {
    .navigation {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }

  .navigation a {
    color: #4ade80;
    text-decoration: none;
    font-size: 1.1rem;
    font-weight: 500;
    transition: color 0.2s;
  }

  .navigation a:hover {
    color: #22c55e;
    text-decoration: underline;
  }
</style>